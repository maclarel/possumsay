#!/bin/bash
input=$@

function print_dashes() {
  len=$(expr $(echo "$1" | wc -c) + 4 )
  i=0
  while [ $i -lt $len ] && [ $i -lt 80 ]; do
    printf "-"
    let i++
  done
  echo
}

if [ -z "$input" ]; then
  NEW_LINE=$'\n'
  while read line; do
    input+="$line$NEW_LINE"
  done < /dev/stdin
  input=${input::-1}
fi

echo "< $input >"

print_dashes "$input"
cat <<EOF
    \        @@       )@.@)/%@//@)/@@///////#@@/
      \      @@@  *#//////////////////////////////@@                          
             )@@//**@/@//@///@@@@@///////////)//@////@                        
          ˎ@           )    @@@@///////////////@///////@                      
         @                     ////////////////////@/&)/@                     
        @                      @@////////////////////////@                    
       @ˎ*       @@            @&/////%//////////)////////%@                  
      @.                       //////////////////&)/////#/@/@@@@@             
    %@                 ˎ@@.   .&//////////////////@//)///%.    .@@@@@*        
   @& ..         @@@@@@@@@    //////////)/////&//@.@/&&@&.           %@@      
   @ @@@ˎ /@@  V       /@   #/////////////////&@   @@@@@               %@@    
    .ˎ.     @         @@   @ @#//////@@@@%.        @@@@                   %@@@
           %      \/@ %@@@@)  )@/@@@                                          
           #   \/@@.     .    )@@@@                                           
            %@%                  @                                                 
EOF
